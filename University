package University;

public class Students extends Departments {
String name;
int ID;
public Student(String name, int ID) {
	this.name=name;
	this.ID=ID;
}
public String getName() {
	return name;
}
public void setName(String name) {
	this.name=name;
}
public int getID() {
	return ID;
}
public void setID(int ID) {
	this.ID=ID;
}
}



